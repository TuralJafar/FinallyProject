@using FinallyProject.Models;
@model List<Product>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <button type="submit"><div class=""><a asp-action="create" asp-controller="service" class="btn btn-success">Create Product</a></div></button>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Icon
                            </th>
                            <th>
                                title
                            </th>
                            <th>
                                Progress
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Deadline
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(Product product in Model){ <tr>
                            <td class="py-1">
                                <img src="~/images/faces/@product.Icon" alt="image" />
                            </td>
                            <td>
                                @product.Title
                            </td>
                            <td>
                               @product.Description
                            </td>
                            <td>
                                @product.Service.Name
                            </td>
                            <td>
                                    <a asp-action="update" asp-controller="service" class="btn btn-secondary"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a asp-action="delete" asp-controller="service" class="btn btn-secondary"><i class="mdi mdi-delete"></i></a>
                                    <a asp-action="details" asp-controller="service" class="btn btn-secondary"><i class="mdi mdi-table-edit"></i></a>
                            </td>
                        </tr>}
                       
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>